<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileSettingsFragment" >

    <TextView
        android:id="@+id/textViewNoOfProjectsToDisplay"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="@string/noofprojectstodisplay" />

    <Spinner
        android:id="@+id/spinnerNoOfProjectsToDisplay"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:entries="@array/number1to10" />

    <TextView
        android:id="@+id/textViewNoOfAssetsToDisplay"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="@string/noofassetstodisplay" />

    <Spinner
        android:id="@+id/spinnerNoOfAssetsToDisplay"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:entries="@array/number1to10" />

    <CheckBox
        android:id="@+id/checkBoxAutoPreviewAssets"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="@string/autopreviewassets" />

    <CheckBox
        android:id="@+id/checkBoxRequireChangePassword"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="@string/requirechangepassword" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="@string/update" >

        <requestFocus />
    </Button>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="@string/cancel" />

</GridLayout>