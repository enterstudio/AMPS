<TabHost 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabHost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MaintabMenu" >
    
<!-- Tab Menu -->    
    <TabWidget
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/tabs" />
 <!-- End of Tab Menu -->
 
 <!-- Tab Content Area -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@android:id/tabcontent" >
        
        <!-- Assets Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/assetTab"
            android:orientation="vertical"
            android:paddingTop="60dp"> 
            
        </LinearLayout>
        <!-- End of Assets Tab -->
        
         <!-- Projects Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/projectTab"
            android:orientation="vertical"
            android:paddingTop="60dp">

        </LinearLayout>
        <!-- End of Projects Tab -->
        
          <!-- Folder Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/folderTab"
            android:orientation="vertical"
            android:paddingTop="60dp">

            
        </LinearLayout>
        <!-- End of Folder Tab -->
        
           <!-- Search Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchTab"
            android:orientation="vertical"
            android:paddingTop="60dp">

            
        </LinearLayout>
        <!-- End of Search Tab -->
        
           <!-- Report Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reportTab"
            android:orientation="vertical"
            android:paddingTop="60dp">
   
        </LinearLayout>
        <!-- End of Report Tab -->
        
    </FrameLayout>       
<!-- End of Tab Content Area -->
</TabHost>