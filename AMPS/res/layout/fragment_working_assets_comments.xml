<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".WorkingAssetsCommentsFragment" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewComment"
                android:layout_width="0px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.3"
                android:text="@string/comment" />

            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="0px"
                android:layout_gravity="center_vertical|fill_horizontal"
                android:layout_weight="0.7"
                android:ems="10"
                android:inputType="textMultiLine" />
        </TableRow>

        <TableLayout
            android:id="@+id/tableRowComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/textViewComment1"
                    android:layout_width="0px"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:text="Comment 1\nAdmin - 01/01/2013" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textViewComment2"
                    android:layout_width="0px"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:text="Comment 2\nAdmin - 02/01/2013" />
            </TableRow>
        </TableLayout>
    </TableLayout>

</ScrollView>