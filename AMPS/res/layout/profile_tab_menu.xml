<TabHost 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileTabHost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ProfileTabMenu" >
    
<!-- Tab Menu -->
    <TabWidget
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/tabs" />
 <!-- End of Tab Menu -->
 
 <!-- Tab Content Area -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@android:id/tabcontent" >
        
        <!-- Account Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/accountTab"
            android:orientation="vertical"
            android:paddingTop="60dp"> 
        </LinearLayout>
        <!-- End of Account Tab -->
        
        <!-- Password Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordTab"
            android:orientation="vertical"
            android:paddingTop="60dp">
        </LinearLayout>
        <!-- End of Password Tab -->
        
        <!-- Settings Tab -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settingsTab"
            android:orientation="vertical"
            android:paddingTop="60dp">
        </LinearLayout>
        <!-- End of Settings Tab -->
    </FrameLayout>       
<!-- End of Tab Content Area -->
</TabHost>